<Window x:Class="UiDesign.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UiDesign"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="1000" Width="1680"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="#5f9186"
        AllowsTransparency="False">
    <Border
        CornerRadius="30" RenderTransformOrigin="0.5,0.5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1296"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="88"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="Curve Editor"
                   VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                   Foreground="White"
                   FontSize="40" Height="88" Width="296"/>

            <StackPanel Grid.Row="1" Background="#5e9b8e">
                <Grid>
                    <Grid.Resources>
                        <Pen x:Key="GrayPenKey" Brush="LightGoldenrodYellow" Thickness="2"/>
                        <GeometryDrawing x:Key="SmallGridDrawing" Pen="{StaticResource GrayPenKey}" Geometry="M 40 40 L 200 40 L 200 200"/>
                        <GeometryDrawing x:Key="LargeGridDrawing" Pen="{StaticResource GrayPenKey}" Geometry="M 40 40 L 200 40 L 200 200"/>
                        <DrawingBrush x:Key="SmallGridBrush" TileMode="Tile" Viewport="0 0 40 40" ViewportUnits="Absolute" Opacity="1" Drawing="{StaticResource SmallGridDrawing}"/>
                        <DrawingBrush x:Key="LargeGridBrush" TileMode="Tile" Viewport="40 0 200 200" ViewportUnits="Absolute" Drawing="{StaticResource LargeGridDrawing}"/>
                    </Grid.Resources>

                    <Canvas Height="840" Width="1240" Background="{StaticResource SmallGridBrush}" Margin="0,80,0,0">
                        <Canvas Height="840" Width="1240" Background="{StaticResource LargeGridBrush}" x:Name="CordSys"
                            MouseLeftButtonUp="Canvas_MouseLeftButtonUp"
                            MouseMove="CordSys_MouseMove" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="-3" MouseLeftButtonDown="Canvas_MouseLeftButtonDown">

                            <Line X1="40" Y1="0" X2="40" Y2="800" Stroke="Green" StrokeThickness="5"/>
                            <Line X1="10" Y1="800" X2="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type Canvas}}}" Y2="800" Stroke="Red" StrokeThickness="5"/>
                        </Canvas>
                    </Canvas>
                </Grid>
            </StackPanel>

            
            
            <StackPanel Grid.Row="1" Grid.Column="1">
                <RadioButton x:Name="ClearEvent_Button" Content="Clear"
                                     Height="50"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                             Style="{StaticResource MenuButtonTheme}" Click="Clear_Viewport"/>
                <RadioButton x:Name="LineEventButtoxn" Content="Line"
                                     Height="50"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                             Style="{StaticResource MenuButtonTheme}" Click="LineEventButton"/>
                <RadioButton x:Name="CubicEventButtoxn" Content="Cubic"
                                     Height="50"
                                     Width="140"
                                     Foreground="White"
                                     FontSize="30"
                             Style="{StaticResource MenuButtonTheme}" Click="CubicEventButton"/>
                <RadioButton x:Name="QuadraticEventButtonx" Content="Quadratic"
                                     Height="50"
                                     Width="200"
                                     Foreground="White"
                                     FontSize="30"
                             Style="{StaticResource MenuButtonTheme}" Click="QuadraticEventButton"/>
            </StackPanel>
            <Canvas x:Name="SettingsWindow" Grid.Column="1" Margin="0,0,40,25" Grid.Row="1">
                <DataGrid AutoGenerateColumns="False" x:Name="dataGrid" Height="372" Width="340" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="10" Canvas.Top="458">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding ellipse_positionID}" FontSize="24"/>
                        <DataGridTextColumn Binding="{Binding ellipseID}" FontSize="24"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Canvas>
        </Grid>


    </Border>
</Window>
